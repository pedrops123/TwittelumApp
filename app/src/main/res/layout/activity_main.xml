<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/msgBox" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="13dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:visibility="visible" android:hint="O que esta acontecendo ? " android:singleLine="false"
            android:selectAllOnFocus="false" android:layout_marginTop="152dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.CardView
    android:layout_height="300dp"
    android:layout_width="0dp"
    android:layout_margin="5dp"
    android:paddingBottom="5dp"
    app:cardCornerRadius="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/msgBox">

     <ImageView
             android:id="@+id/tweet_foto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
        >
    </ImageView>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>